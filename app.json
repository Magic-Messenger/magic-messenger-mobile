{
  "expo": {
    "name": "Magic",
    "slug": "magic-messenger",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash_icon.png",
      "backgroundColor": "#24003D",
      "resizeMode": "contain"
    },
    "scheme": "magicmessenger",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "icon": "./assets/images/icon.png",
      "supportsTablet": false,
      "bundleIdentifier": "com.privatixsolutions.magicchat",
      "version": "2.0.0",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"],
        "UIDeviceFamily": [1]
      },
      "entitlements": {
        "aps-environment": "production"
      },
      "appleTeamId": "35LQH8RJM3"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-foreground.png",
        "backgroundColor": "#24003D"
      },
      "softwareKeyboardLayoutMode": "adjustResize",
      "googleServicesFile": "./google-services.json",
      "edgeToEdgeEnabled": true,
      "package": "com.magicmessenger.app",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "buildArchs": ["arm64-v8a", "x86_64"],
      "enableProguardInReleaseBuilds": true,
      "enableMinifyInReleaseBuilds": true,
      "applicationBinarySize": 16384
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": false
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash_icon.png",
          "backgroundColor": "#24003D",
          "resizeMode": "contain"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow the app accesses your photos to let you share securely.",
          "microphonePermission": "Allow the app to access your microphone so you can send voice messages securely.",
          "recordAudioAndroid": true
        }
      ],
      "expo-localization",
      "expo-iap",
      "expo-secure-store",
      "./plugins/trust-local-certs.js",
      "./plugins/override-read-media-permission.js",
      "./plugins/with-firebase.js",
      "./plugins/with-notifee.js",
      "@logrocket/react-native",
      [
        "expo-av",
        {
          "microphonePermission": "Allow the app to access your microphone so you can send voice messages securely."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow the app accesses your photos to let you share securely."
        }
      ],
      "expo-localization",
      "expo-video",
      [
        "react-native-capture-protection",
        {
          "captureType": "fullMediaCapture"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "kotlinVersion": "2.0.21",
            "minSdkVersion": 25
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d0e79472-8b27-49b6-b3f5-9e1553818db8"
      }
    },
    "owner": "tulpar-yazilim"
  }
}
