{
  "expo": {
    "name": "Magic RN",
    "slug": "magic-messenger",
    "version": "1.3.8",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "magicmessenger",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.privatixsolutions.magicchat",
      "buildNumber": "2",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"]
      },
      "entitlements": {
        "aps-environment": "production"
      },
      "appleTeamId": "35LQH8RJM3"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#24003D"
      },
      "softwareKeyboardLayoutMode": "pan",
      "googleServicesFile": "./google-services.json",
      "edgeToEdgeEnabled": true,
      "package": "com.magicmessenger.app",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": false
        }
      ],
      [
        "expo-splash-screen",
        {
          "ios": {
            "enableFullScreenImage_legacy": true,
            "image": "./assets/images/splash.png",
            "resizeMode": "cover",
            "backgroundColor": "#24003D"
          },
          "android": {
            "image": "./assets/images/splash.png",
            "resizeMode": "cover",
            "backgroundColor": "#24003D",
            "imageWidth": 180
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow the app accesses your photos to let you share securely.",
          "microphonePermission": "Allow the app to access your microphone so you can send voice messages securely.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-notifications",
        {
          "enableBackgroundRemoteNotifications": true
        }
      ],
      "expo-localization",
      "expo-iap",
      "expo-secure-store",
      "./plugins/trust-local-certs.js",
      [
        "expo-av",
        {
          "microphonePermission": "Allow the app to access your microphone so you can send voice messages securely."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow the app accesses your photos to let you share securely."
        }
      ],
      "expo-localization",
      "expo-video",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "kotlinVersion": "2.0.21"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d0e79472-8b27-49b6-b3f5-9e1553818db8"
      }
    },
    "owner": "tulpar-yazilim"
  }
}
